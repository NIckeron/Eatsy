<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpHeader"
        android:layout_gravity="center_horizontal"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:layout_weight="0.05"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignTop="@+id/facebook"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Facebook Login" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/google"
        android:layout_gravity="right"
        android:layout_weight="0.05"
        android:layout_alignTop="@+id/facebook"
        android:layout_centerHorizontal="true"
        android:background="@drawable/google" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/facebook"
        android:layout_weight="0.05"
        android:background="@drawable/facebook"
        android:adjustViewBounds="true"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/signUpHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/or"
        android:layout_marginTop="31dp"
        android:text="or"
        android:textSize="20dp"
        android:layout_below="@+id/google"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_margin="45dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#555555"
        android:layout_below="@id/google"
        android:layout_toRightOf="@id/or"/>

    <View
        android:layout_margin="45dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#555555"
        android:layout_below="@id/facebook"
        android:layout_toLeftOf="@id/or"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Use an e-mail"
        android:textSize="30dp"
        android:layout_below="@+id/or"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/userEmail"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:hint="E-mail"
        android:background="#DBE8C5"
        android:padding="5dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/userPass"
        android:layout_marginTop="14dp"
        android:hint="Password"
        android:layout_below="@+id/userEmail"
        android:layout_alignLeft="@+id/userEmail"
        android:layout_alignStart="@+id/userEmail"
        android:background="#DBE8C5"
        android:padding="5dp"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#bbbbbb"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp"
        android:id="@+id/terms_button">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/terms"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:id="@+id/terms"
            android:text="terms"
            android:textSize="30dp"
            android:textColor="#555555"/>
         </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#bbbbbb"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp"
        android:id="@+id/next_button">

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:id="@+id/next"
            android:text="next"
            android:textSize="30dp"
            android:textColor="#555555"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/go_next" />
    </LinearLayout>

</RelativeLayout>