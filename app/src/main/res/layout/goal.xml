<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/goaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="17dp"
        android:text="Ποιος είναι ο στόχος σου?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/goaltext"
        android:layout_margin="5dp"
        android:background="#3b984b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/normal"
        android:layout_alignEnd="@+id/next_button"
        android:layout_alignRight="@+id/next_button"
        android:orientation="horizontal">
        android:id="@+id/thin">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="103dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/slim"
            android:contentDescription="image of thin person" />

        <TextView
            android:id="@+id/thinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:text="Να χάσω βάρος"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="40dp"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/next_button"
        android:layout_alignRight="@+id/next_button"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="103dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/normal"
            android:contentDescription="image of average person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:text="Να διατηρήσω \nτο βάρος μου"
            android:textSize="20dp" />

        <CheckBox
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="40dp"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/strong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back_button"
        android:layout_alignEnd="@+id/next_button"
        android:layout_alignRight="@+id/next_button"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="103dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/fat"
            android:contentDescription="image of strong person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:text="Να πάρω βάρος"
            android:textSize="20dp" />

        <CheckBox
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="40dp"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#bbbbbb"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/go_back" />

        <TextView
            android:id="@+id/back"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:text="back"
            android:textAllCaps="true"
            android:textColor="#555555"
            android:textSize="40dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:background="#bbbbbb"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/next"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:text="next"
            android:textAllCaps="true"
            android:textColor="#555555"
            android:textSize="40dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/go_next" />
    </LinearLayout>

</RelativeLayout>